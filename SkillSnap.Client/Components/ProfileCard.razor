@code {
    private PortfolioUser user = new PortfolioUser
    {
        Name = "Sir Laughsalot",
        Bio = "Professional unicorn wrangler and part-time intergalactic pizza delivery expert.",
        ProfileImageUrl = "https://placekitten.com/400/400"
    };

    // Placeholder class for demonstration; replace with DTO or shared model as needed.
